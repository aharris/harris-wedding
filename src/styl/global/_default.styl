body
  background linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), url('../images/IMG_9437.JPG') 30% 40%
  background-size cover
  color $white
  font-family $default
  -webkit-font-smoothing antialiased


// Layout
.row
  cf()



// NAV
.layout-transparent
  background none

  .mdl-layout__header,
  .mdl-layout__drawer-button
    color white

.mdl-layout__header
  background-color rgba(0,0,0, .5)

.mdl-layout__header .mdl-layout__drawer-button
  background none

.mdl-layout__drawer-button
  .material-icons
    margin-top 10px

.header-title
  font-family $script
  font-size 1.7em


